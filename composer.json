{
    "name": "photon/api-json",
    "type": "library",
    "description": "Views helper to create REST APIs with JSON and CORS",
    "keywords": [
        "photon",
        "api",
        "json",
        "cors"
    ],
    "homepage": "http://www.photon-project.com/",
    "license": "LGPL-2.1-or-later",
    "authors": [
        {
            "name": "William MARTIN",
            "email": "william.martin@power-lan.com",
            "role": "Developer"
        },
        {
            "name": "Community",
            "homepage": "https://github.com/photon/api-json/blob/master/CONTRIBUTORS.md"
        }
    ],
    "require": {
        "php" : "^7.0",
        "photon/photon": "^2.0"
    },
    "require-dev": {
      "phpunit/phpunit": "^5.0",
      "squizlabs/php_codesniffer": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "photon\\views\\APIJson\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\": "tests/"
        }
    },
    "scripts": {
        "phpcs": "phpcs --standard=PSR2 src tests",
        "phpcbf": "phpcbf --standard=PSR2 src tests",
        "phpunit": "phpunit -c phpunit.xml"
    }
}
